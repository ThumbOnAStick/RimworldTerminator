<?xml version="1.0" encoding="utf-8" ?>
<Defs>  
<ThingDef Name="Bastion_AncientTerminatorJunk" ParentName="Bastion_AncientBastionJunk">
    <defName>Bastion_AncientTerminatorJunk</defName>
    <label>Ancient Combat Mechanoid Junk</label>
    <description>The remains of a fearsome terminator.\nThe interior conduits look deteriorated; It could probably be restored by a mechanitor with some advanced components.</description>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Terminator/Other/junkCJTerminator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.25,1.25)</drawSize>
    </graphicData>
    <size>(1,1)</size>
    <tickerType>Normal</tickerType>
    <fillPercent>0.5</fillPercent>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <statBases>
      <Mass>5</Mass>
    </statBases>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_ProximityLetter">
        <radius>10</radius>
        <letterDef>PositiveEvent</letterDef>
        <letterLabel>Ancient mech</letterLabel>
        <letterText>One of your colonists spotted an ancient combat mechanoid! Maybe you could bring it back to working order.</letterText>
      </li>
      <li Class="Bastion.Bastion_AncientJunk_CompProperties">
        <mechDef>Mech_CJTerminator</mechDef>
      </li>
    </comps>
  </ThingDef>
    
</Defs>